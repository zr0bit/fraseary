//on index
$clearfix
  clearfix()

$col
  float left
  box-sizing border-box

colxy(x,y)
  width (x/y)*100%
  box-sizing border-box

.clearfix
  @extend $clearfix

$grid
  @extend .clearfix
  width 100%
  position relative

$c1-1
  colxy(1,1)

$c1-2
  colxy(1,2)

$c1-3
  colxy(1,3)

$c2-3
  colxy(2,3)

$c1-4
  colxy(1,4)

$c3-4
  colxy(3,4)

$c1-5
  colxy(1,5)

$c2-5
  colxy(2,5)

$c3-5
  colxy(3,5)

$c1-6
  colxy(1,6)

$c5-6
  colxy(5,6)

.c1-1
  @extend $c1-1

.c1-2
  @extend $c1-2

.c1-3
  @extend $c1-3

.c1-4
  @extend $c1-4


.col
  @extend $col

.row
  @extend $clearfix

.hide
  display none
