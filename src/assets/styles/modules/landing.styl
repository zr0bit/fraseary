.landing
  z-index 0
  position relative
  width 100%
  height 400px
  overflow hidden
  background url('../images/media/cover-1.jpg')
  background-position center center
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  &:before
    content ''
    top 0
    position absolute
    width 100%
    height 400px
    display block
    background #494DA2
    z-index -1
    opacity .7

  h1
    max-width 384px
    color #fff
    padding-top 100px
    text-align center
    margin  0 auto
    font-weight 100
  span
    font-weight 900

  form
    max-width 544px
    margin 0 auto
    position relative


  input
    width 100%
    height 40px
    padding-left 16px
    box-sizing border-box
    color #fff
    font-size 24px
    margin-top 16px
    background none
    border 2px solid #fff
    border-radius 40px

  .inner
    z-index 1
    max-width 1260px
    padding 0 8px
    margin 0 auto

  .landing-inner
    position relative
    top -400px
    max-width 650px
    margin 0 auto
