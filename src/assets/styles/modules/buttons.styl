//on index
$btn
  display inline-block
  // margin-bottom 0 // For input.btn
  font-weight 100
  text-align center
  // vertical-align middle
  cursor pointer
  background-image none // Reset unusual Firefox-on-Android default style see https//github.com/necolas/normalize.css/issues/214
  // border 1px solid transparent
  white-space nowrap
  user-select none
  box-sizing border-box
  text-decoration none
  // padding 0

// new version fraseary
.btn-icon
  .header &
    display block
    box-sizing border-box
    width 48px
    height 32px
    padding 8px 16px
    margin 0
    border-radius 8px
    background _gray10


    @media (min-width: 800px)
      background red
      display: none


.btn-search
  @extend $btn
  position absolute
  border none
  background none
  top 8px
  right 0
  width 40px
  height 26px
  font-size 16px


$btn-ghost
  box-sizing border-box
  padding 8px 16px
  border 1px solid _color12
  border-radius: 32px
  background none
  color _color12

.btn-expand
  @extend $btn-ghost
  @extend $l-16pt-button
  display block
  width 104px
  margin 16px auto 0

  @media (min-width: 800px)
    display none

.btn-share
  width 120px
  display inline-block
  box-sizing border-box
  padding 8px 8px
  margin-top 16px
  border-radius 32px
  border 1px solid _color12
  color _color12
  text-decoration none
  background none
  user-select none
  cursor pointer

  span
    @extends $l-16pt-button
    vertical-align text-top
    margin-left 8px


// mediumShareButtons
.share-medium
  max-width 400px
  list-style none
  margin 0
  padding 0
  li
    float left
    width 50%
    box-sizing border-box
    &.left
      padding-right 10px
    &.right
      padding-left 10px

.medium-btn
  display block
  width 100%
  height 40px
  padding 8px 10px
  box-sizing border-box
  text-decoration none
  text-align center
  border-radius 3px
  svg
    fill #fff
    box(24px)
  span
    color #fff
    margin 0 0 0 8px

  &.twitter
    background twitterColor
    &:hover
      background lighten(twitterColor, 3)

  &.facebook
    background facebookColor
    &:hover
      background lighten(facebookColor, 3)
