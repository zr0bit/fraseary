html
  font-size 16px

body
  background _bg12
  overflow-y scroll
  font-family _font_family1

#main
  display flex
  min-height 100vh
  flex-direction column
  justify-content space-between

.svg-icons, .svg-emojis, .svg-pics
  display none

//header
.header
  position fixed
  min-height 40px
  box-sizing border-box
  top 0
  right 0
  left 0
  background #fff
  box-shadow: _shadow_header
  z-index 999


.header-nav
  margin 0
  padding 4px 8px 0 8px

  & > ul
    padding 0
    margin 0

  li
    list-style none


  @media screen and (min-width: 1200px)
    max-width 1200px
    margin 0 auto

.header-menu
  float left
  ul
    @extends $h2-20pt
    display none
    padding 4px 0 0 0

  li
    float left
    margin-left 8px

  a
    color _color12
    text-decoration none
    padding 9px 8px

  a:hover
    background _bg12
    border-radius 8px

.header-logo
  display block
  width 128px
  height 32px
  margin 0 auto

  .pic-logo
    width 128px
    height 32px
    fill _color12


.header-search
  float right
  form
    display none

@media (min-width: 800px)
  .header
    height 48px
  .header-nav
    ul
      display flex

  .header-logo
    order 1
    float left
    margin 0

  .header-search
    order 2
    width 288px
    height 40px
    padding 0 0 0 16px
    form
      display inline-block

  .header-menu
    order 3
    ul
      display inline-block

.header-drop-down
  display: none
  background #fff
  padding 24px 8px 24px 8px

  a
    @extend $h2-20pt
    color _color12
    text-decoration none
  ul
    list-style: none
    margin 0
    padding 0


.showMenu
  .header-drop-down
    display block

.showSearch
  .header-drop-down
    display block

//main content
.content-wrap
  margin-top 35px

.home-content
  overflow hidden
  margin 0 auto
  padding: 16px 8px 0
  @media screen and (min-width: 1190px)
    width 1190px


@media (min-width: 800px)
  .aside-right
    float right
    width 300px

  .aside-left
    float left
    width 200px

  .main-middle
    overflow hidden
    margin 0 300px 0 200px


// footer
.footer
  clear both
  background _color12
  padding 16px 8px

  h3
    color #fff

  ul
    @extends $p-16pt
    padding 0

  li
    padding 4px 0
    list-style none

  a
    padding 4px 0
    color #fff
    text-decoration none

  .pic-logo
    fill #fff
    width 160px
    height 40px


.footer-inner
  overflow hidden
  @media screen and (min-width: 1200px)
    max-width 1200px
    margin 0 auto

  nav
    @media (min-width: 800px)
      float left
      colxy(1,3)

.nav-social
  span
    vertical-align text-bottom
    margin-left 8px

.link-logo
  width 160px
  height 40px
  display block
  margin 0 auto


.main.list
  overflow hidden
  margin 0 auto
  padding: 16px 8px 0
  @media screen and (min-width: 1190px)
    width 1190px
